<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9999"
    tools:context=".presenter.ui.splash_activity.SplashFragment">



    <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash"
            />


        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C3000000"
            android:scaleType="fitXY" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"

            android:orientation="vertical"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="0dp">


            <ImageView
                android:layout_width="147dp"
                android:layout_height="135dp"
                android:src="@drawable/beta"
                tools:ignore="MissingConstraints" />

            <customfonts.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="top|center"
                android:text="Beta fashion"
                android:textColor="@color/city_name"
                android:textSize="20dp" />


            <customfonts.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="top|center"
                android:text="Smart online shopping"
                android:textColor="@color/hotel_name"
                android:textSize="16dp" />


        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>