<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ecommerce.b_shopping">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presenter.ui.products_activity.ProductsActivity"
            android:label="@string/title_activity_products"></activity>
        <activity android:name=".presenter.ui.basket_activity.BasketActivity" />
        <activity android:name=".presenter.ui.payment_activity.PaymentActivity" />
        <activity android:name=".presenter.ui.details_activity.DetailsActivity" />
        <activity android:name=".presenter.ui.info_activity.InfoActivity" />
        <activity
            android:name=".presenter.ui.splash_activity.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presenter.ui.main_new_activity.MainNewActivity"
            android:label="@string/title_activity_main_new"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>